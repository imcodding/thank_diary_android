<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/include_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:visibility="invisible">

    <TextView
        android:id="@+id/include_description_1"
        style="@style/Text.ContentStyle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/description_text_padding"
        android:text="@string/test_text" />

    <TextView
        android:id="@+id/include_description_2"
        style="@style/Text.ContentStyle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/description_text_padding" />

    <TextView
        android:id="@+id/include_description_3"
        style="@style/Text.ContentStyle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/description_text_padding" />

    <TextView
        android:id="@+id/include_description_4"
        style="@style/Text.ContentStyle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/description_text_padding" />

    <TextView
        android:id="@+id/include_description_close"
        style="@style/Text.ContentStyle"
        android:layout_width="@dimen/text_default_size"
        android:layout_height="@dimen/text_default_size"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="닫기" />
</LinearLayout>