<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_setting_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:src="@drawable/ic_logout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/item_setting_tv"
        style="@style/Text.ContentStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="@string/test_text"
        app:layout_constraintBottom_toBottomOf="@id/item_setting_iv"
        app:layout_constraintStart_toEndOf="@+id/item_setting_iv"
        app:layout_constraintTop_toTopOf="@+id/item_setting_iv" />

    <View
        android:id="@+id/user_setting_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@+id/item_setting_iv" />

</androidx.constraintlayout.widget.ConstraintLayout>